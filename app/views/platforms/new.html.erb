<%= content_for :page_header do %>
  <div class="w-full flex flex-row items-center justify-between">
    <div class="flex flex-row items-center">
      <h1 class="text-2xl font-bold">New Platform</h1>
    </div>
    <div class="ml-4">
      <%= link_to "Save", "#", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= form_for @platform, url: platforms_path, method: :post do |f| %>
  <div class="mt-4 grid grid-cols-2 w-[50%] gap-2 px-5">
    <label class="label">Platform name</label>
    <%= f.text_field :name, placeholder: "BTCUSDT", class: "input" %>

    <label class="label">API KEY</label>
    <%= f.text_field :api_key, class: "input" %>
    <label class="label">API SECRET</label>
    <%= f.text_field :api_secret, class: "input" %>
  </div>

  <div class="mt-4">
    <%= f.submit "Create Platform", class: "btn btn-primary" %>
  </div>
<% end %>
